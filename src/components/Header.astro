---
interface Props {
  siteTitle?: string;
}

const { siteTitle = "El Rincón de Isma" } = Astro.props;

const menuItems = [
  { href: "/", text: "Inicio" },
  { href: "/acerca", text: "Acerca" },
  { href: "/servicios", text: "Servicios" },
  { href: "/contacto", text: "Contacto" },
];
---

<header
  class="sticky top-0 z-50 bg-gray-800/80 backdrop-blur-md text-white shadow-lg transition-all duration-300"
>
  <nav class="container mx-auto px-4 py-3">
    <div class="flex justify-center items-center">
      <!-- Logo y Título -->
      <a href="/" class="flex items-center group">
        <div
          class="w-12 h-12 rounded-full overflow-hidden border-2 border-white shadow-md transition-transform duration-300 group-hover:scale-110"
        >
          <img
            src="/images/logos/logo.png"
            alt="Logo El Rincón de Isma"
            class="w-full h-full object-cover"
            width="48"
            height="48"
          />
        </div>
        <h1
          class="text-2xl font-bold tracking-tight ml-3 transition-colors duration-300 group-hover:text-blue-400"
        >
          {siteTitle}
        </h1>
      </a>
    </div>
  </nav>
</header>

<script>
  // Toggle del menú móvil
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Efecto de scroll para el header
  const header = document.querySelector("header");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      header?.classList.add("bg-gray-800/90", "shadow-xl");
    } else {
      header?.classList.remove("bg-gray-800/90", "shadow-xl");
    }
  });
</script>
