---
import { YouTube } from "astro-embed";

interface Props {
  title?: string;
  channelUrl?: string;
  channelName?: string;
}

const {
  title = "Últimos Videos",
  channelUrl = "https://www.youtube.com/@elrincondeisma",
  channelName = "El Rincón de Isma",
} = Astro.props;

// Videos con sus títulos
const videos = [
  {
    id: "uM9wRT-s8MY",
    title: "¿Qué es Laravel Cloud, y cómo funciona?",
  },
  {
    id: "46Y8ORWDtRU",
    title: "Aplicaciones en Tiempo Real con Laravel",
  },
  {
    id: "uEUo78H8uG8",
    title: "La mejor plantilla para comenzar a programar",
  },
];
---

<section class="max-w-4xl mx-auto">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2
        class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4"
      >
        {title}
      </h2>
      <a
        href={channelUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center text-red-500 animate-pulse hover:underline"
      >
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
          ></path>
        </svg>
        {channelName}
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        videos.map((video) => (
          <div class="flex flex-col">
            <div class="aspect-video rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <YouTube id={video.id} />
            </div>
            <h3 class="mt-3 text-lg font-semibold text-gray-900 dark:text-white line-clamp-2">
              {video.title}
            </h3>
          </div>
        ))
      }
    </div>
  </div>
</section>
