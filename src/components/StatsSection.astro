---
interface Props {
  title?: string;
  stats?: {
    subscribers?: string;
    tutorials?: string;
    projects?: string;
  };
}

const {
  title = "Estad√≠sticas",
  stats = {
    subscribers: "10K+",
    tutorials: "100+",
    projects: "50+",
  },
} = Astro.props;
---

<div class="mt-12 w-full">
  <h3
    class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4 flex justify-center"
  >
    {title}
  </h3>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-3xl mx-auto">
    <div class="bg-gray-700 p-6 rounded-2xl shadow-md text-center">
      <div class="text-3xl font-bold text-purple-400 mb-2">
        {stats.subscribers}
      </div>
      <div class="text-gray-300">Suscriptores</div>
    </div>
    <div class="bg-gray-700 p-6 rounded-2xl shadow-md text-center">
      <div class="text-3xl font-bold text-blue-400 mb-2">{stats.tutorials}</div>
      <div class="text-gray-300">Tutoriales</div>
    </div>
    <div class="bg-gray-700 p-6 rounded-2xl shadow-md text-center">
      <div class="text-3xl font-bold text-green-400 mb-2">{stats.projects}</div>
      <div class="text-gray-300">Proyectos</div>
    </div>
  </div>
</div>
